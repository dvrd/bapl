#!/usr/bin/env lua

local i = require "week-4.interpreter"
local utils = require "utils.core"

local flags = utils.parseArgs(arg)

local mem = {}
local function exec(input, is_eval)
	local ast = i.parse(input)

	if ast ~= nil then
		local code = i.compile(ast)
		local stack = {}
		i.run(code, mem, stack, flags)
		if is_eval then print(stack[1]) end
	else
		utils.pf "error: dont know how to parse that yet buddy"
	end
end

local input = ""
if flags["expression"] then
	input = flags["expression"]
	exec(input)
elseif flags["filename"] then
	local f = io.open(flags["filename"], "r")
	if f then
		input = f:read("*all")
		f:close()
		exec(input)
	end
elseif flags["checkhealth"] then
	dofile("./" .. flags["checkhealth"] .. "/tests.lua")
elseif #arg == 0 then
	while true do
		io.write(">> ")
		input = io.read()

		if input == "q" then
			os.exit()
		elseif input == "clear" then
			os.execute("clear")
		else
			exec(input, "eval")
		end
	end
end
